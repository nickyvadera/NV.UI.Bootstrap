@inject IComponentCssHelperFactory componentCssHelperFactory

<input class=@GetCssClasses() disabled=@Disabled max=@Max min=@Min step=@Step type=range value=@Value @onchange=OnChangeCallback />

@code {
    [Parameter]
    public bool Disabled { get; set; }

    [Parameter]
    public EventCallback<ChangeEventArgs> OnChangeCallback { get; set; }

    [Parameter]
    public IStyleBuilder StyleBuilder { get; set; }

    [Parameter]
    public int? Max { get; set; }

    [Parameter]
    public int? Min { get; set; }

    [Parameter]
    public int? Step { get; set; }

    [Parameter]
    public string Value { get; set; }

    private string GetCssClasses()
    {
        return componentCssHelperFactory.Create("form-range")
            .AddStyleBuilder(StyleBuilder)
            .Build();
    }
}
