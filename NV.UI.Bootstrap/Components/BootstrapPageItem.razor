@inject IComponentCssHelperFactory componentCssHelperFactory

<li class=@GetCssClasses()>
    <a class="page-link" @onclick="OnClickCallback">@ChildContent</a>
</li>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public bool Disabled { get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> OnClickCallback { get; set; }

    private string GetCssClasses()
    {
        return componentCssHelperFactory.Create("page-item")
            .AddConditionalClass(Disabled, "disabled")
            .Build();
    }
}
